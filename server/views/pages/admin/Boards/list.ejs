<!DOCTYPE html>
<html>
<%# head include style sheet %>
<%- include ("../../../partials/admin/include/stylesheet.ejs") %>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <%- include("../../../partials/admin/include/header.ejs") %>
  <%- include ("../../../partials/admin/include/LeftNav.ejs") %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>List</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Info boxes -->
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Board List</h3>
              <div class="box-tools pull-right">
                <div class="search">
                  <div class="form-group">
                    <select class="select2" name="type" id="type">
                      <option value="t">Title</option>
                      <option value="w">Writer</option>
                      <option value="c" >Content</option>
                    </select>
                    <input type="text" name="keyword" id="keyword" placeholder="Search...">
                    <button type="button" name="SearchBtn" id="SearchBtn">Search</button>
                  </div>
                </div>
              </div>
              <!--./box-tools-->
            </div>
            <!--./box-header-->
            <div class="box-body">
              <table class="table table-bordered table-hover">
                <tr style="text-align:center;">
                  <td><input type="checkbox" id="AllCheck" ></td>
                  <td>Title</td>
                  <td>Writer</td>
                  <td>View Number</td>
                  <td>Reply Number</td>
                  <td>Create Time</td>
                  <td>Update Time</td>
                </tr>
                <%if(list){%>
                  <%list.forEach(item=>{%>
                  <tr style="text-align:center;">
                    <td ><input type="checkbox"  name="check" value="<%=item.id%>"></td>
                    <td><a href="/admin/boards/view?bno=<%=item.id%>"><%=item.title%></a></td>
                    <td><%=item.writer%></td>
                    <td><span class="badge bg-aqua"><%=item.count%></span></td>
                    <td><span class="badge bg-purple"><%=item.web_replies.length%></span></td>
                    <td><%=item.createdAt.getFullYear() + "년" + (item.createdAt.getMonth() + 1) + "월" + (item.createdAt.getDate()) + "일" + (item.createdAt.getHours()) + "시" + (item.createdAt.getMinutes()) + "분" %></td>
                    <td><%=item.updatedAt.getFullYear() + "년" + (item.updatedAt.getMonth() + 1) + "월" + (item.updatedAt.getDate()) + "일" + (item.updatedAt.getHours()) + "시" + (item.updatedAt.getMinutes()) + "분" %></td>
                  </tr>
                <%});%>
                <%}%>
              </table>
              <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate" style="text-align:center;">
                <ul class="pagination">
                  <%if(Search.type){%>
                    <%if(Search.keyword){%>
                      <li class="paginate_button previous" id="example2_previous"><a href="/admin/boards/list?page=<%=parseInt(curPage) -1 <= 0 ? 1 : parseInt(curPage)-1 %>&type=<%=Search.type%>&keyword=<%=Search.keyword%>" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a></li>
                    <%}%>
                  <%}else{%>
                  <li class="paginate_button previous" id="example2_previous"><a href="/admin/boards/list?page=<%=parseInt(curPage) -1 <= 0 ? 1 : parseInt(curPage)-1 %>" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a></li>
                  <%}%>
                  <%for(let i = 1; i <= MaxPage; i++){%>
                    <%if(Search.type){%>
                      <%if(Search.keyword){%>
                        <li class="paginate_button <%= parseInt(curPage) == parseInt(i) ? 'active':'' %>"><a href="/admin/boards/list?page=<%=i%>&type=<%=Search.type%>&keyword=<%=Search.keyword%>"><%=i%></a></li>
                      <%}%>
                    <%}else{%>
                      <li class="paginate_button <%= parseInt(curPage) == parseInt(i) ? 'active':'' %>"><a href="/admin/boards/list?page=<%=i%>"><%=i%></a></li>
                    <%}%>
                  <%}%>
                  <%if(Search.type){%>
                    <%if(Search.keyword){%>
                      <li class="paginate_button next" id="example2_next"><a href="/admin/boards/list?page=<%=parseInt(curPage)+1 < MaxPage ? parseInt(curPage)+1 : MaxPage %>&type=<%=Search.type%>&keyword=<%=Search.keyword%>" aria-controls="example2" data-dt-idx="7" tabindex="0">Next</a></li>
                    <%}%>
                  <%}else{%>
                  <li class="paginate_button next" id="example2_next"><a href="/admin/boards/list?page=<%=parseInt(curPage)+1 < MaxPage ? parseInt(curPage)+1 : MaxPage %>" aria-controls="example2" data-dt-idx="7" tabindex="0">Next</a></li>
                  <%}%>
                </ul>
              </div>
            </div>
            <!--./box-body-->
            <div class="box-footer">
              <div class="pull-left">
                <button type="button" id="deleteBtn" class="btn btn-danger">Delete</button>
              </div>
              <div class="pull-right">
                <button type="button" id="modifyBtn" class="btn btn-warning">Modify</button>
                <button type="button" id="createBtn" class="btn btn-primary">Create</button>
              </div>
            </div>
            <!--./box-footer-->
          </div>
          <!--./box-->
        </div>
        <!--./div-->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include ("../../../partials/admin/include/footer.ejs") %>

</div>
<!-- ./wrapper -->
<%# include default javascript %>
<%- include ("../../../partials/admin/include/javascript") %>
</body>
<script>
  $(document).ready(function(){
    
    function AllCheck(){
      $("#AllCheck").click(function(){
        if($(this).is(':checked')){
          $("input[name=check]").prop("checked", true);
        }else{
          $("input[name=check]").prop("checked", false);
        }
      });
    }
    function Create(){
      $("#createBtn").click(function(){
        document.location.href="/admin/boards/create";

      });
    }
    function Search(){
      $("#SearchBtn").click(function(){
        let type = $("#type").val();
        let keyword = $("#keyword").val();
        document.location.href = "/admin/boards/list?type=" + type + "&keyword=" + keyword;
      });
    }

    function getUrlParams() {
      let params = {};
      window.location.search.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(str, key, value) { params[key] = value; });
