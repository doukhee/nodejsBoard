        });
      });
    }
    /** Create Board */
    Create();
    /** Search Board */
    Search();
    /** Select All */
    AllCheck();
    /** Modify */
    Modify();
    /** Get Search Value */
    <%if(Search.type == "t"){%>
      $("#type").val("t").attr("selected", "selected");
    <%}else if(Search.type == "w"){%>
      $("#type").val("w").attr("selected", "selected");
    <%}else if(Search.type == "c"){%>
      $("#type").val("c").attr("selected", "selected");
    <%}%>
    <%if(Search.keyword){%>
      $("#keyword").val("<%=Search.keyword%>");
    <%}%>
  });
</script>
</html>
